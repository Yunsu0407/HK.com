<?xml version="1.0" encoding="UTF-8"?>

<web-app>
    <!-- main.jsp 서블릿 설정 -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <jsp-file>/pages/main/main.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- login.jsp 서블릿 설정 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <jsp-file>/pages/login/login.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- signup.jsp 서블릿 설정 -->
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <jsp-file>/pages/signup/signup.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
<!-- productInfo.jsp 서블릿 설정 -->
    <servlet>
        <servlet-name>ProductInfoServlet</servlet-name>
        <jsp-file>/pages/productInfo/productInfo.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductInfoServlet</servlet-name>
        <url-pattern>/productInfo</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.css</url-pattern>
		<url-pattern>*.jpg</url-pattern>
		<url-pattern>*.gif</url-pattern>
		<url-pattern>*.png</url-pattern>
		<url-pattern>*.ico</url-pattern>
		<url-pattern>*.swf</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>jsp</servlet-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>*.jspx</url-pattern>
	</servlet-mapping>
    
    <!-- 메인 페이지 설정 -->
    <welcome-file-list>
        <welcome-file>main</welcome-file>
    </welcome-file-list>
</web-app>
